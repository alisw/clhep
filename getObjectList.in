#!/bin/sh

# get a list of object files
 
# getObjectList [-static|-shared] <subdir list>

filelist=""
for arg in "$@"
do
   if [ "$arg" = "-static" ] 
   then
      extra=""
   elif [ "$arg" = "-shared" ] 
   then
      extra="/shared"
   else
      if [ -e ${arg}/src${extra} ]
      then
	 thispkg=`ls $arg/src$extra/*.@OBJEXT@`
	 filelist="$filelist $thispkg"
      fi
   fi
done

echo $filelist
