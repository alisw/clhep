//
// list all valid QQ translation IDs
// must read the translation list from a QQ decay table
//
// Usage:  listQQTranslation 
//
// ----------------------------------------------------------------------

#include <fstream>
#include <iostream>

#include "CLHEP/HepPDT/defs.h"
#include "CLHEP/HepPDT/QQDecayTable.hh"
#include "CLHEP/HepPDT/PDGtoQQTable.hh"

int main()
{
    const char infile[] = "@srcdir@/listQQ.dec";
    const char outfile[] = "listQQTranslation.out";
    // open input file
    std::ifstream pdfile( infile );
    if( !pdfile ) { 
      std::cerr << "cannot open " << infile << std::endl;
      exit(-1);
    }
    std::ofstream wpdfile( outfile );
    if( !wpdfile ) { 
      std::cerr << "cannot open " << outfile << std::endl;
      exit(-1);
    }
    // read decay.dec 
    HepPDT::QQDecayTable qdt( pdfile );
    // write information we just read
    qdt.writeTable( wpdfile );
    // create the translation table
    HepPDT::PDGtoQQTable::instance()->buildTable( qdt );
    // write the tranlations
    HepPDT::PDGtoQQTable::instance()->writeTranslations( wpdfile );
}
