// ----------------------------------------------------------------------
// listPDGNames.cc
//
// read Pythia table and write out translation from pythia to HepPDT
//
// ----------------------------------------------------------------------

#include <fstream>
#include <iostream>

#include "CLHEP/HepPDT/TranslationList.hh"

int main()
{
    const char infile[] = "@srcdir@/../data/PDG_mass_width_2004.mc";
    const char outfile[] = "listPDGNames.out";
    // open input file
    std::ifstream pdfile( infile );
    if( !pdfile ) { 
      std::cerr << "cannot open " << infile << std::endl;
      exit(-1);
    }
    // open output file
    std::ofstream wpdfile( outfile );
    if( !wpdfile ) { 
      std::cerr << "cannot open " << outfile << std::endl;
      exit(-1);
    }
    // read the table file and write a translation list
    HepPDT::listPDGTranslation( pdfile, wpdfile );
}
